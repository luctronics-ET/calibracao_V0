# Configurações da Aplicação
APP_NAME="Sistema de Calibração"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_TIMEZONE=America/Sao_Paulo
APP_LOCALE=pt_BR

# Configurações do Banco de Dados
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/database/database.sqlite
# Para MySQL/PostgreSQL:
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=calibracao
# DB_USERNAME=root
# DB_PASSWORD=

# Configurações de Cache e Sessão
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_LIFETIME=120

# Configurações de Email
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@calibracao.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configurações de Autenticação
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,localhost:8080

# Configurações de Storage
FILESYSTEM_DISK=local

# Configurações de Log
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configurações de Vite
VITE_APP_NAME="${APP_NAME}"

# Configurações de Notificações
NOTIFICATION_DIAS_VENCIMENTO=30
NOTIFICATION_SCHEDULE_ENABLED=true

# Configurações de Upload
MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_EXTENSIONS=pdf,jpg,jpeg,png

# Configurações de Paginação
ITEMS_PER_PAGE=15

# Credenciais Padrão (Desenvolvimento apenas - NUNCA usar em produção!)
ADMIN_EMAIL=admin@calibracao.com
ADMIN_PASSWORD=admin123
TECNICO_EMAIL=tecnico@calibracao.com
TECNICO_PASSWORD=tecnico123
