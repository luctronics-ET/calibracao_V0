{
  "name": "calibracao/skeleton",
  "description": "Skeleton Laravel-like project for calibration management",
  "type": "project",
  "require": {
    "php": "^8.0",
    "laravel/framework": "^10.0",
    "phpoffice/phpspreadsheet": "^5.3",
    "doctrine/dbal": "^3.5.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Seeders\\": "database/seeders/",
      "Database\\Factories\\": "database/factories/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
